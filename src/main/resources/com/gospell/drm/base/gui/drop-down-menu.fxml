<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<HBox fx:id="root" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      style="-fx-background-color: transparent"
      alignment="CENTER"
      fx:controller="com.gospell.drm.base.gui.view.DropDownMenuController">
    <ImageView fx:id="image" visible="false">
        <Image url="@../../../../../icons/add-black.png"/>
    </ImageView>
    <Button fx:id="dropDownBtn" style="-fx-background-color: transparent"/>
    <Region HBox.hgrow="ALWAYS"/>
    <ImageView fx:id="dropDownImage">
        <Image url="@../../../../../icons/dropdown.png"/>
    </ImageView>
    <Region prefWidth="5"/>
</HBox>