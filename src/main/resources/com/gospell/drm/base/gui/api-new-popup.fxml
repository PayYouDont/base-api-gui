<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            styleClass="window-popup"
            fx:controller="com.gospell.drm.base.gui.controller.ApiNewPopupController">
    <VBox fx:id="dropdownMenu" style="-fx-padding: 10">
        <HBox alignment="CENTER_LEFT" styleClass="label-container" onMouseClicked="#addNewInterface">
            <Label text="新建接口" styleClass="icon-label" >
                <graphic>
                    <ImageView>
                        <Image url="@../../../../../icons/new_interface.png"/>
                    </ImageView>
                </graphic>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" styleClass="label-container">
            <Label text="新建SSE接口" styleClass="icon-label">
                <graphic>
                    <ImageView>
                        <Image url="@../../../../../icons/new_sse_interface.png"/>
                    </ImageView>
                </graphic>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" styleClass="label-container">
           <Label text="新建Markdown" styleClass="icon-label">
               <graphic>
                   <ImageView>
                       <Image url="@../../../../../icons/new_markdown.png"/>
                   </ImageView>
               </graphic>
           </Label>
           <Region HBox.hgrow="ALWAYS"/>
       </HBox>
    </VBox>
</AnchorPane>
